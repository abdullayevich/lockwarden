<Window x:Class="LockWarden.Desktop.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LockWarden.Desktop.Windows"
        xmlns:components="clr-namespace:LockWarden.Desktop.Components"
        mc:Ignorable="d"
        Height="600" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Images/lockwarden.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Background="Transparent">
            <Border Background="#050E2A"
                    BorderBrush="Gold"
                    BorderThickness="1 1 0 1"
                    CornerRadius="15 0 0 15"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown"
                    Cursor="ScrollAll">
                <components:LockEllipseUserControl />
            </Border>
        </Grid>

        <Grid Grid.Column="1" Background="Transparent">
            
            <Border BorderBrush="Gold"
                Grid.Column="1"
                MouseLeftButtonDown="Border_MouseLeftButtonDown_1"
                Cursor="ScrollAll"
                Background="#050E2A"
                BorderThickness="0 1 1 1"
                CornerRadius="0 15 15 0">

                <Grid>
                    <Button Style="{StaticResource FormCloseButton}" Content="X" Cursor="Arrow" Click="Button_Click"/>
                    <Button Style="{StaticResource FormMinimiseButton}" Content="_" Cursor="Arrow" Click="Button_Click_1"/>

                    <Border Margin="35"
                            Cursor="Arrow"
                            CornerRadius="15"
                            BorderThickness="1">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/LogoPanel.jpg" Opacity="0.4" Stretch="Fill"/>
                            </Border.Background>
                    
                        <StackPanel x:Name="LoginStackPanel" Margin="10">
                      
                            <Label Content="Email" Style="{StaticResource LoginLabelStyle}" Margin="0,135,0,0"/>
                            <Border x:Name="emailBorder" BorderThickness="1"
                                    BorderBrush="Gold" Background="DarkGray" Opacity="0.7"
                                    Height="30" Width="300" CornerRadius="9" Margin="0">
                                    <Grid>
                                        <TextBlock x:Name="textEmail" MouseDown="textEmail_MouseDown" Text="example@gmail.com" Style="{StaticResource textHint}"/>
                                        <TextBox x:Name="txtemail"  TextChanged="txtemail_TextChanged" Style="{StaticResource LoginTextBoxStyle}"/>
                                    </Grid>
                            </Border>

                            <Label Content="Password" Style="{StaticResource LoginLabelStyle}" Margin="0 20 0 0"/>
                            <Border x:Name="passwordBorder" BorderThickness="1"
                                    BorderBrush="Gold" Background="DarkGray" Opacity="0.7"
                                    Height="30" Width="300" CornerRadius="9" Margin="0">
                                    <Grid>
                                        <TextBlock x:Name="textPassword" MouseDown="textPassword_MouseDown" Text="Your Password" Style="{StaticResource textHint}"/>
                                        <PasswordBox x:Name="txtPasswords" PasswordChanged="txtPasswords_PasswordChanged" Style="{StaticResource LoginPasswordBox}"/>
                                    </Grid>
                            </Border>

                            <Button Content="Login" Style="{StaticResource FormPrimaryButton}" />
                            <Button Content="Register" Style="{StaticResource FormSuccessButton}" Width="180"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
